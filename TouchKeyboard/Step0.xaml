<Window x:Class="TouchKeyboard.Step0"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:TouchKeyboard.Models"
        Style="{StaticResource max}"
		 DataContext="{x:Static models:Step0Model.DataContext}">
	<Grid Background="{StaticResource bga.01}">
		<Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Margin="{Binding Margin0}" Width="{Binding Diameter}" Height="{Binding Diameter}"/>
		<Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Margin="{Binding Margin1}" Width="{Binding Diameter}" Height="{Binding Diameter}"/>
	</Grid>
</Window>
