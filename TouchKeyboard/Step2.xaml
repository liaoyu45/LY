<Window x:Class="TouchKeyboard.Step2"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:TouchKeyboard"
		xmlns:m="clr-namespace:TouchKeyboard.Models"
		Style="{StaticResource max}"
		DataContext="{x:Static m:Step1Model.DataContext}">
	<Grid>
		<ListBox ItemsSource="{Binding Fingers}" Style="{StaticResource fullListBox}" IsHitTestVisible="False">
			<ListBox.ItemContainerStyle>
				<Style TargetType="ListBoxItem">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="ListBoxItem">
								<Grid Margin="{Binding Margin}" Width="{x:Static local:Settings.Diameter}" Height="{x:Static local:Settings.Diameter}" HorizontalAlignment="Left" VerticalAlignment="Top">
									<TextBlock Text="{Binding Index}" FontSize="{x:Static local:Settings.Radius}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
									<Ellipse/>
								</Grid>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ListBox.ItemContainerStyle>
		</ListBox>
	</Grid>
</Window>
